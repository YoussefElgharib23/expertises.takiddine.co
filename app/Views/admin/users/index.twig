  <li>{{ user.banck}}</li>
  <li>RIB</li>
  <li>{{ user.rib}}</li>
  <li> Date d inscription </li>
  <li>{{ user.created_at|dateOnly }}</li>
  <li>Role</li>
  <li>{% if user.role == 'colaborator' %}
              Collaborateur
              {% else %}
              {{ user.role }}
              {% endif %}</li>
  <li>Action</li>
  <li> <a  href="{{ path_for('users.edit', {'id': user.id}) }}" class="btn btn-success ">
                  <i class="icon-pencil7 position-left"></i>
                  <span class="hidden-xs">{{l.users.20}} </span>
              </a>
              <a  data-toggle="modal"  data-target="#deleteModal"  href='javascript:;' data-id="{{path_for('users.delete',{ id : user.id })}}"  class="btn remove-user-btn btn-danger ">
                  <i class="icon-trash position-left"></i>  <span class="hidden-xs">Supprimer</span></li></a>
</ul>
{% endfor %}

</div>
{% endif %}



        

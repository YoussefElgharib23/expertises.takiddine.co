 {% extends "admin/layout.twig" %}
{% block title %} {{l.users.1}} {% endblock %}

{% block content %}
   

         
<!-- Main content -->
<div class="content-wrapper">

<!-- Page header -->
<div class="page-header page-header-default ">
<div class="page-header-content">

<div class="page-title">
<h1> <span class="text-semibold"><i class="icon-arrow-right6 position-left goback"></i>
{{l.users.111}}</span></h1>
</div>

<div class="heading-elements">
<a href="{{ path_for('users.create') }}" class="btn bg-blue btn-labeled heading-btn"><b><i class="icon-plus3"></i></b>{{l.users.222}}</a>
</div>
</div>
        <div class="breadcrumb-line">
<ul class="breadcrumb">
    <li><a href="{{path_for('admin.index')}}" title="{{l.bread.1}}"><i class="icon-home2 position-left"></i>{{l.sidbar.1}}</a></li>
</ul>

</div>
</div>
<!-- /page header -->




<!-- Content area -->
<div class="content">
    
{% include "admin/elements/flash.twig" %}






{% if content is not empty %}
<div class="panel panel-flat table-panel table-responsive">
    <table class="table  " >
        <thead>
            <tr>
                <th class="col-md-2"><i class=" icon-user"></i>&nbsp;<b>{{l.users.1}}</b></th>
                <th><i class=" icon-envelop"></i>&nbsp;<b>{{l.users.2}}</b></th>
                <th><i class=" icon-pushpin"></i>&nbsp;<b>{{l.users.3}}</b></th>
                 <th><i class=" icon-coin-dollar"></i>&nbsp;<b>{{l.users.4}}</b></th>
                <th><i class=" icon-more2"></i>&nbsp;<b>{{l.users.5}}</b></th>
                <th><i class="icon-calendar3"></i>&nbsp;<b>{{l.users.6}}</b></th>
                <th><i class="icon-cog2"></i>&nbsp;<b>{{l.users.7}}</b></th>

                <th class=""><i class=" icon-touch"></i>&nbsp;<b>{{l.users.8}}</b></th>
            </tr>
        </thead>
        <tbody>  
        {% for user in content %}
        <tr>

             <td data-label="Nom d utilisateur">{{ user.username}}</td>
             <td data-label="Email">{{ user.email}}</td>
             <td data-label="Ville">{{ user.ville}}</td>
             <td data-label="Bank">{{ user.banck}}</td>
             <td data-label="RIB">{{ user.rib}}</td>
             <td data-label="Date d inscription">{{ user.created_at|dateOnly }}</td>
             <td data-label="Role">
              {% if user.role == 'colaborator' %}
              Collaborateur
              {% else %}
              {{ user.role }}
              {% endif %}
             </td>
             <td data-label="Action">
              <a  href="{{ path_for('users.edit', {'id': user.id}) }}" class="btn btn-success ">
                  <i class="icon-pencil7 position-left"></i>
                  <span class="hidden-xs">{{l.users.17}} </span>
              </a>
              <a  data-toggle="modal"  data-target="#deleteModal"  href='javascript:;' data-id="{{path_for('users.delete',{ id : user.id })}}"  class="btn remove-user-btn btn-danger ">
                  <i class="icon-trash position-left"></i>  <span class="hidden-xs">{{l.users.16}}</span>
             </td>
         </tr>
         {% endfor %}   
        </tbody>
    </table>
    {% for user in content %}
<ul class="responsive_ul">
  <li>Nom</li>
